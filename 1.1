* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
body {
    background-color: #800080; /* Фиолетовый цвет */
    color: white; /* Белый текст для контраста */
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 50px;
}
.container {
    width: 100%;
}
header {
    background-color: #333;
    color: white;
}
header h1 {
    font-size: 2em;
}
nav ul {
    list-style: none;
    display: inline-block;
    float: right;
}
nav ul li {
    display: inline;
}
nav ul li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}
nav ul li a:hover {
    text-decoration: underline;
}
main {
    padding: 0;
}
section {
    margin: 0;
}
h2 {
    font-size: 2em;
}
ul {
    list-style: square;
}
footer {
    background-color: #333;
    color: white;
    text-align: center;
}
